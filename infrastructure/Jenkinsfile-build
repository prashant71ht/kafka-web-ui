stage 'Build JAR file'
node{
  sh 'cd server && gradlew clean build'
}
stage 'Build and push image to Registry'
node {
    checkout scm

    docker.withRegistry('https://registry.jpl.nasa.gov', "${params.credentials}") {

        def customImage = docker.build("ebis/$CONTAINER_IMAGE:${env.BUILD_ID}", "-f infrastructure/Dockerfile .")

        /* Push the container to the custom Registry */
        customImage.push()
    }
}

